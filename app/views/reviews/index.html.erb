<% if @shop %>
  <h1>Reviews for <%= @shop.name %> - <%= @shop.category %></h1>
<% else %>
  <h1>All the Reviews </h1>
<% end %>

<ul>
<% @reviews.each do |review| %>

  <li>
  <%= review.shop.name%>: <%= link_to review.title, review_path(review)%> - <%= review.stars%> 
  </li> <br>

<% end %>
</ul>